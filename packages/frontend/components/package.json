{
  "name": "@luminate/components",
  "version": "0.1.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Bryan Kegley",
  "license": "MIT",
  "workspaces": {
    "nohoist": [
      "@tailwindcss/forms",
      "@tailwindcss/forms/**"
    ]
  },
  "private": true,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/components.esm.js",
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@headlessui/react": "^0.3.1",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@tailwindcss/forms": "^0.2.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^10.2.4",
    "husky": "^5.0.9",
    "postcss": "^8.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup-plugin-postcss": "^4.0.0",
    "size-limit": "^4.9.2",
    "tailwindcss": "^2.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "downshift": "^6.1.0",
    "lodash.debounce": "^4.0.8"
  }
}
